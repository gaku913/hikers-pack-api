// Doc: https://ama-tech.hatenablog.com/debug-rails-with-vscode-rdbg
{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "rdbg",
      "name": "Debug Rails",
      "request": "launch",
      "cwd": "${workspaceRoot}",
      "script": "bin/rails server -b 0.0.0.0",
      "args": [],
      "askParameters": false,
      "useBundler": true,
    },
  ]
}